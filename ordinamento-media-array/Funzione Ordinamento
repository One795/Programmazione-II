// funzione di ordinamento (selection sort):

void OrdinamentoArray(int array[], int n)
{
    //dichiaro le variabili che mi servono per la funzione:
    int i,
        j,
        app;

        // faccio l'ordinamento:

    for(i=0; i<n-1; i++)
    {
        for(j=i+1; j<n; j++)
        {
            if(array[i]>array[j])
            {
                app=array[j];
                array[j]=array[i];
                array[i]=app;
            }
        }
    }
}
